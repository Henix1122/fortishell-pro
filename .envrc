# Load Python virtual environment if it exists
if [ -d ".venv" ] && [ -f ".venv/bin/activate" ]; then
    source .venv/bin/activate
    echo "Activated virtual environment: .venv"
else
    echo "Warning: .venv not found. Run 'python -m venv .venv' to create it."
fi

# Set useful environment variables
export PYTHONPATH=$(pwd):$PYTHONPATH
export PATH=$(pwd)/.venv/bin:$PATH

# Optional: Automatically install requirements if requirements.txt exists
if [ -f "requirements.txt" ]; then
    pip install --upgrade pip
    pip install -r requirements.txt
fi

# Optional: Show current Python version
python --version
